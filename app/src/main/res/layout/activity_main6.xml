<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/im"
    android:padding="8dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover more sensors"
        android:layout_marginBottom="16dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- pH Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH Sensor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/phSensor"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="pH Sensor"
                android:src="@drawable/img_61"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- Turbidity Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turbidity Sensor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/turbiditySensor"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Turbidity Sensor"
                android:src="@drawable/img_62"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Salinity Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salinity Sensor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/salinitySensor"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Salinity Sensor"
                android:src="@drawable/img_66"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- Conductivity Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductivity Sensor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/sensor4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Conductivity Sensor"
                android:src="@drawable/img_65"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <!-- Third Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Dissolved Oxygen Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dissolved Oxygen Sensor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/sensor5"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Dissolved Oxygen Sensor"
                android:src="@drawable/img_67"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- Water Temperature Sensor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Temperature Sensor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/sensor6"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Water Temperature Sensor"
                android:src="@drawable/img_68"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
