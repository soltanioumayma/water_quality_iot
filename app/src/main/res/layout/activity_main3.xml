<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/im">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="let's answer your questions :"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C'est quoi l'eau acide, neutre, basique ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qu'est-ce que la conductivité électrique ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:clickable="true"
        android:textStyle="bold"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C'est quoi la salinité ?"
        android:padding="10dp"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment garantir une bonne qualité d'eau pour l'irrigation ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="@color/semi_transparent"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quels sont les effets d'une eau trop salée sur les plantes ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment vérifier la qualité de l'eau avant l'irrigation ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pourquoi est-il important de tester régulièrement l'eau d'irrigation ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/question8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quels sont les erreurs courantes en irrigation à éviter ?"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="@color/semi_transparent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    </LinearLayout>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/light_blue"
        android:text="let's do quiz ?"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>
